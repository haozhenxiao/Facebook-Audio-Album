<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/album_row"
    android:background="@drawable/rowselector" >
    
    <RelativeLayout 
        android:layout_centerVertical="true"
        android:paddingLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView 
            android:scaleType="fitXY"  
            android:layout_height="40dip" 
            android:layout_width="40dip" 
			android:id="@+id/album_icon" 
			android:layout_alignParentLeft="true" 
			android:src="@drawable/blank" 
			android:layout_centerVertical="true">
		</ImageView>
		
		<TextView android:id="@+id/album_name"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textStyle="bold" android:textColor="#777777"
			android:shadowColor="@color/black" android:shadowRadius="0.5"
			android:shadowDx="0" android:shadowDy="0" android:layout_toRightOf="@+id/album_icon" android:layout_marginLeft="4dip"></TextView>
		
		<ImageView
		    android:layout_height="32dip" 
            android:layout_width="32dip" 
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_next_item"
            android:layout_centerVertical="true" />
		
		
    </RelativeLayout>
    

</RelativeLayout>
